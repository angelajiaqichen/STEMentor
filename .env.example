# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AI Learning Platform
VERSION=1.0.0
SECRET_KEY=your-secret-key-here

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_learning_platform
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Vector Database
VECTOR_DB_TYPE=chromadb
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_FOLDER=./uploads

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@ailearningplatform.com
EMAILS_FROM_NAME=AI Learning Platform

# Superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changeme

# Environment
ENVIRONMENT=development
TESTING=false
LOG_LEVEL=INFO

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]
